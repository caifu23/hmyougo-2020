/* pages/personal/index.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}
.personal-info {
  width: 750rpx;
  height: 400rpx;
  padding-top: 125rpx;
  box-sizing: border-box;
  background-color: #ff2d4a;
}

.personal-info .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  width: 340rpx;
}
.personal-info .info .iconfont {
  font-size: 16px;
  color: #fff;
}
.personal-info .info .img {
  width: 138rpx;
  height: 138rpx;
  border: 2px solid #fff;
  border-radius: 50%;
}
.personal-info .info .img image {
  width: 100%;
  height: 100%;
}

.personal-info navigator {
  margin: 10px auto;
  display: flex;
  justify-content: center;
  font-size: 13px;
  color: #fff;
}
.personal-box {
   position: relative;
   top: -25rpx;
   margin: 0 auto;
   width: 95%;
}
.personal-box > view {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.personal-others {
  display: flex;
  justify-content: space-between;
  text-align: center;
  width: 100%;
  background-color: #fff;
}
.personal-others >view {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 25rpx 0;
  font-size: 11px;
  color: #666;
}

.personal-order .order-title {
  padding: 20rpx;
  font-size: 16px;
  text-indent: 10rpx;
  border-bottom: 1px solid #dfdfdf;
}
.personal-order .order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
}
.personal-order .order-info .iconfont {
  font-size: 20px;
  font-weight: bold;
  color: #ff2d4a;
}
.personal-order .order-info navigator:last-child .iconfont {
  font-size: 24px;
}
.personal-order .order-info navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 12px;
}
.personal-order .order-info navigator text:last-child {
  margin-top: 8px;
}

.personal-box .personal-addr {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
}
.personal-box .personal-addr navigator {
  color: #ccc;
}