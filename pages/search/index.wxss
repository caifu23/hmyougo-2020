/* pages/search/index.wxss */

.search {
  position: relative;
  padding: 25rpx 20rpx;
  background-color: #efefef;
}

.search input {
  padding-left: 60rpx;
  border-radius: 3px;
  font-size: 12px;
  background-color: #fff;
}

.search icon {
  position: absolute;
  top: 50%;
  left: 25rpx;
  transform: translateY(-50%);
}

.search-condition {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
  padding: 20rpx 0;
  font-size: 13px;
  color: #353535;
  text-align: center;
}

.search-condition > view {
  flex: 1;
}

.search-condition .active {
  color: #ff2e4b;
}

.search-condition .down-up {
  display: inline-block;
  margin-left: 2px;
  height: 13px;
}

.search-condition .down-up .down, .search-condition .down-up .up {
  width: 0;
  height: 0;
  border: 4px solid transparent;
}

.search-condition .down-up .down {
  margin: 0 auto;
  border-top-color: #cdcdcd;
}

.search-condition .down-up .up {
  margin: 0 auto 2px;
  border-bottom-color: #cdcdcd;
}

.search-condition .down-up .down.current {
  border-top-color: #666;
}

.search-condition .down-up .up.current {
  border-bottom-color: #666;
}

.products {
  /* background-color: pink; */
}

.products-inner {
  display: flex;
  border-bottom: 1px solid #e9e9e9;
  padding: 20rpx 25rpx;
  font-size: 13px;
  color: #353535;
}

.products-inner image {
  width: 192rpx;
  max-height: 199rpx
}

.pro-right {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-left: 20rpx;
}

/* 2行文本超出部分显示省略号 */
.pro-right .pro-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}

.pro-right .pro-price {
  font-size: 12px;
  color: #ff2f4c;
}

.pro-right .pro-price text {
  font-size: 16px;
}
.pro-right .pro-price icon {
  float: right;
  margin-right: 50rpx;
  font-size: 18px;
}

.history {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.history .history-head {
  display: flex;
  justify-content: space-between;
}
.history .history-head text {
  font-size: 14px;
}
.history .history-head icon.icon-close {
  margin-right: 20rpx;
  color: gray;
  font-weight: bold;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.history-list .history-item {
  border-radius: 3px;
  margin-right: 15px;
  margin-bottom: 10px;
  padding: 15rpx 23rpx;
  font-size: 12px;
  background-color: #dedede;
}