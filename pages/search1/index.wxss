.search {

}

.search .search-input {
  position: relative;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 25rpx 20rpx;
  background-color: #efefef;
}

.search .search-input icon {
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
  padding: 0 5px;
  font-size: 10px;
  line-height: 10px;
}

.search .search-input input {
  flex: 3;
  flex-shrink: 0;
  box-sizing: border-box;
  padding-left: 30px;
  border-radius: 3px;
  height: 30px;
  font-size: 12px;
  background-color: #fff;
}

.search .search-input button {
  flex: 1;
  flex-shrink: 0;
  box-sizing: border-box;
  margin-left: 10px;
  border-radius: 3px;
  border: 1px solid #d2d2d2;
  padding: 0;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  font-weight: normal;
  background-color: #efefef;
}
.search-input .recommand {
  position: absolute;
  top: calc(30px + 50rpx);
  left: 0;
  right: 0;
  height: 50vh;
  padding-top: 5px;
  font-size: 12px;
  color: gray;
  background-color: #fff;
}
.search-input .recommand .recom-item {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  border-bottom: 1px solid #eee;
  height: 30px;
  line-height: 30px;
}
.recom-item .recom-name text {
  color: #ff2d4a;
}
.search-input .recommand .recom-item .icon-lefttop {
  font-size: 14px;
  color: #ccc;
}


.history {
  padding: 25rpx 30rpx 25rpx 20rpx;
}
.history .history-head {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}
.history .history-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  font-size: 12px;
}
.history .history-list .history-item {
  padding: 5px 8px;
  margin-right: 10px;
  margin-bottom: 7px;
  background-color: #dedede;
}