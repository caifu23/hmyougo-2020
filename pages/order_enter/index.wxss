/* pages/order_enter/index.wxss */
.container {
  height: 100vh;
  overflow: auto;
  padding-bottom: calc(100rpx + 10px);
  background-color: #f5f5f5;
}
.container > view {
  background-color: #fff;
}

.take-delivery {
  padding-top: 40rpx;
  /* border-bottom: 5px solid skyblue; */
  font-size: 14px;
  color: #333;
}

.take-delivery .take-info,
.take-delivery .take-addr,
.take-delivery .take-add {
  padding: 0 40rpx;
}
.take-delivery .take-addr .title {
  margin-right: 3px;
  border: 1px solid #b83731;
  font-size: 10px;
  color: #ff2d4a;
}

.take-delivery .take-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.take-delivery .take-img {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  width: 100%;
  height: 5px;
}
.take-delivery .take-img image {
  width: 100%;
  height: 100%;
}

.phone .title {
  margin-right: 30rpx;
}

.cart-goods {
  
}
.cart-goods .seller {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}
.cart-goods .seller .icon-dianpu {
  font-size: 13px;
  color: gray;
}

.cart-goods .goods-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  height: 155rpx;
  border-bottom: 1px solid #ccc;
}

.cart-goods .select-icon {
  width: 12.5%;
}
.cart-goods .select-icon text {
  display: block;
  width: 12px;
  height: 12px;
  border: 1px solid #999;
  border-radius: 50%;
}
.cart-goods .goods-info {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.cart-goods .goods-left {
  width: 150rpx;
  height: 150rpx;
}

.cart-goods .goods-left image {
  width: 100%;
  height: 100%;
}

.cart-goods .goods-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  box-sizing: border-box;
  padding-left: 10px;
  font-size: 12px;
}
.cart-goods .goods-right .goods-title {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cart-goods .goods-right .goods-data {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-right .goods-data .goods-price {
  width: 55%;
  font-size: 14px;
  color: #ff2d4a;
}
.goods-right .goods-data .goods-number {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 45%;
  text-align: right;
}
.goods-right .goods-data .goods-number text {
  width: 100%;
}

.cart-sum {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  font-size: 12px;
  z-index: 999;
}
.cart-sum >view {
  height: 100%;
}
.cart-sum >view:not(:last-child) {
  flex: 4;
}
.cart-sum .sum {
  flex: 3;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background: #06ba03;
}
.cart-sum .select-icon {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 25rpx;
}
.cart-sum .select-icon icon {
  margin-right: 25rpx;
}

.cart-sum .select-icon text:nth-child(1) {
  display: block;
  margin-right: 25rpx;
  width: 12px;
  height: 12px;
  border: 1px solid #999;
  border-radius: 50%;
}

.cart-sum .calc-price {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 14px;
}
.cart-sum .calc-price .price text {
  color: #ff2d4a;
}

.noGoods {
  padding-top: 100rpx;
  text-align: center;
  background-color: transparent!important;
}
