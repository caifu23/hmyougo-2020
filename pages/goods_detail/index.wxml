<!--pages/goods_detail/index.wxml-->
<view class="container">
  <view class="goods-detail">
    <!-- 商品主要信息 图片,价格,标题-->
    <view class="goods-info">
      <!-- 商品图片轮播 -->
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular indicator-color="rgba(255,255,255, .7)" indicator-active-color="rgba(255,255,255, 1)" class="goods_img">
        <block wx:for="{{goods_data.pics}}" wx:key="index">
          <swiper-item>
            <image src="{{item.pics_mid_url}}"></image>
          </swiper-item>
        </block>
      </swiper>
      <view class="info">
        <!-- 价格 -->
        <view class="goods-price">￥{{goods_data.goods_price}} </view>
        <!-- 标题 -->
        <view class="goods-title">
          <view class="title"> {{goods_data.goods_name}} </view>
          <view class="collect">
            <text class="iconfont icon-shoucang"></text>
            <text> 收藏 </text>
          </view>
        </view>
        <view class="express"> 快递: <text>免运费</text> </view>
      </view>
    </view>
    <!-- 商品促销 -->
    <view> 促销 </view>
    <!-- 底部栏--联系客服\购物车 -->
    <view class="goods-operate">
      <view class="contact">
        <text class="iconfont icon-callingrobort"></text>
        <text>联系客服</text>
      </view>
      <view class="shopcart">
        <text class="iconfont icon-icon-test2"></text>
        <text> 购物车 </text>
      </view>
      <view class="add-cart">
        加入购物车
      </view>
      <view class="purchase">
        立即购买
      </view>
    </view>
  </view>
</view>