/* pages/goods_detail/index.wxss */
.goods-detail {
  padding-bottom: 51px;
  background-color: #f5f5f5;
}
.goods-detail > view {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.goods-detail .goods_img {
  width: 750rpx;
  height: 750rpx;
  background-color: #fff;
}
.goods-detail .goods_img swiper-item,
.goods-detail .goods_img image {
  width: 100%;
  height: 100%;
}

.goods-info .info{
  box-sizing: border-box;
  padding: 25rpx 20rpx;
  background-color: #fff;
}
.goods-info .goods-price {
  font-size: 20px;
  color: #ff2d4a;
}
.goods-info .goods-title {
  margin-top: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-info .goods-title .title {
  padding-right: 15px;
  font-size: 14px;
  color: #343434;
  /* 2行溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-info .goods-title .collect {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  width: 150rpx;
  border-left: 1px solid #ebebeb;
  font-size: 13px;
}
.goods-info .goods-title .collect text {
  color: #9b9a9b;
}
.goods-info .goods-title .collect text:not(:last-child) {
  margin-bottom: 5px;
}
.goods-info .goods-title .collect .iconfont {
  font-size: 15px;
  line-height: 15px;
  height: 15px;
}
.goods-info .express {
  margin-top: 10px;
  font-size: 13px;
  color: #9b9a9b;
}
.goods-info .express text {
  padding-left: 20rpx;
}

.goods-detail .goods-main {
  /* padding: 20rpx 0; */
}
.goods-main .tabs {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  font-size: 16px;
}
.goods-main .tabs > view {
  box-sizing: border-box;
  border-top: 2px solid transparent;
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}
.goods-main .tabs .active {
  color: #ff2d4a;
  border-top-color: #ff2d4a;
}
.goods-main .main-standard {
  padding: 20rpx;
}
.goods-main .main-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: left;
}
.goods-main .main-item text {
  flex: 3;
  text-indent: 5px;
  height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #eee;
  font-size: 12px;
  overflow: hidden;
}
.goods-main .main-item text:first-child {
  flex: 2;
  font-weight: bold;
}
.goods-detail .goods-operate {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0;
  height: 50px;
  font-size: 12px;
  text-align: center;
  color: #9a999a;
}
.goods-operate >view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}
.goods-operate .contact,
.goods-operate .shopcart {
  flex: 5;
}
.goods-operate .contact {
  position: relative;
}
.goods-operate .contact button {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  padding: 0;
  height: 100%;
  opacity: 0;
}
.goods-operate .contact .iconfont,
.goods-operate .shopcart .iconfont {
  font-size: 22px;
}
.goods-operate .add-cart,
.goods-operate .purchase {
  flex: 7;
  height: 100%;
  font-size: 14px;
  color: #fff;
}
.goods-operate .add-cart {
  background-color: #ffb517;
}
.goods-operate .purchase {
  background-color: #ff2d4a;
}